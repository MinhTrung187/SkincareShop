<Window x:Class="SkincareShop.ProductWindow.ProductEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkincareShop.ProductWindow"
        mc:Ignorable="d"
        Title="ProductEdit" Height="450" Width="800">
    <Canvas>
        <StackPanel Canvas.Left="295" Canvas.Top="29">
            <TextBox x:Name="NameTextBox" Width="200" Margin="5" Text="Name" Height="33"/>
            <TextBox x:Name="DescriptionTextBox" Width="200" Margin="5" Text="Description" Height="160" TextWrapping="Wrap" AcceptsReturn="True"/>
            <TextBox x:Name="PriceTextBox" Width="200" Margin="5" Text="Price"/>
            <TextBox x:Name="StockTextBox" Width="200" Margin="5" Text="Stock"/>
            <TextBox x:Name="SkinTypeTextBox" Width="200" Margin="5" Text="Skin Type"/>
            <TextBox x:Name="ImageUrlTextBox" Width="200" Margin="5" Text="Image URL"/>
            <Button Content="Save" Click="SaveButton_Click" Margin="5"/>
        </StackPanel>
    </Canvas>
</Window>
