<Window x:Class="SkincareShop.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Dashboard" Height="500" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Background="#F8F9FA">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="40">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                <TextBlock x:Name="WelcomeTextBlock" Text="Xin Chào, Manager!" 
                           FontSize="20" FontWeight="Bold" Foreground="#333" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <Label Content="Hãy chọn một trong các tùy chọn sau:" FontSize="16" Foreground="#555" HorizontalAlignment="Center"/>

                <StackPanel Margin="0,20,0,0">
                    <Button x:Name="ManageUserButton" Content="🧑‍💼 Quản lý người dùng" Height="50" FontSize="16" FontWeight="Bold" Click="ManageUserButton_Click" Background="#4CAF50" Foreground="White" Margin="0,10,0,0" Cursor="Hand"/>
                    <Button x:Name="ManageProductButton" Content="🛍️ Quản lý sản phẩm" Height="50" FontSize="16" FontWeight="Bold" Click="ManageProductButton_Click" Background="#2196F3" Foreground="White" Margin="0,10,0,0" Cursor="Hand"/>
                    <Button x:Name="ManageOrderButton" Content="📦 Quản lý đơn hàng" Height="50" FontSize="16" FontWeight="Bold" Click="ManageOrderButton_Click" Background="#FF9800" Foreground="White" Margin="0,10,0,0" Cursor="Hand"/>
                </StackPanel>

                <Button x:Name="LogoutButton" Content="🚪 Đăng xuất" Height="40" FontSize="14" FontWeight="Bold" Click="LogoutButton_Click" Background="#E53935" Foreground="White" Margin="0,20,0,0" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>