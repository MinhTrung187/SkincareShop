<Window x:Class="SkincareShop.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkincareShop"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="WelcomeTextBlock" Text="Xin Chào"
               FontSize="16" 
               FontWeight="Bold" 
               Margin="10,10,0,0" 
               VerticalAlignment="Top" 
               HorizontalAlignment="Left"/>
        <Label Content="Hãy Chọn 1 Trong Các Options Sau" HorizontalAlignment="Left" Height="45" Margin="235,34,0,0" VerticalAlignment="Top" Width="340" FontSize="20" FontWeight="Bold"/>
        <Button x:Name="ManageUserButton" Content="Manage User" HorizontalAlignment="Center" Height="65" Margin="0,144,0,0" VerticalAlignment="Top" Width="240" FontWeight="Bold"/>
        <Button x:Name="ManageProductButton" Content="Manage Product" HorizontalAlignment="Center" Height="65" Margin="0,304,0,0" VerticalAlignment="Top" Width="240" FontWeight="Bold"/>
        <Button x:Name="ManageOrderButton" Content="Manage Order" HorizontalAlignment="Center" Height="65" Margin="0,224,0,0" VerticalAlignment="Top" Width="240" Click="ManageOrderButton_Click" FontWeight="Bold"/>
        <Button x:Name="LogoutButton" Content="Logout" HorizontalAlignment="Left" Height="40" Margin="640,344,0,0" VerticalAlignment="Top" Width="80" Click="LogoutButton_Click"/>
    </Grid>
</Window>
