<Window x:Class="SkincareShop.Customer.ProductListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Danh Sách Sản Phẩm" Height="500" Width="900">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                   Text="Danh Sách Sản Phẩm"/>

        <!-- Bộ lọc theo loại da -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Lọc theo loại da:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="SkinTypeComboBox" Width="150" SelectionChanged="SkinTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Tất cả" Tag="0"/>
                <ComboBoxItem Content="Da thường" Tag="1"/>
                <ComboBoxItem Content="Da dầu" Tag="2"/>
                <ComboBoxItem Content="Da khô" Tag="3"/>
                <ComboBoxItem Content="Da nhạy cảm" Tag="4"/>
            </ComboBox>
        </StackPanel>

        <!-- Danh sách sản phẩm -->
        <ListView x:Name="ProductListView" Grid.Row="2" BorderThickness="1" BorderBrush="Gray"
                  MouseDoubleClick="ProductListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <!-- Cột hình ảnh -->
                    <GridViewColumn Header="Hình Ảnh" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImageUrl}" Width="80" Height="80" Stretch="Uniform"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Tên Sản Phẩm" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Mô Tả" Width="300" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Giá" Width="100" DisplayMemberBinding="{Binding Price, StringFormat={}{0:N0} VNĐ}"/>
                    <GridViewColumn Header="Số Lượng Tồn" Width="100" DisplayMemberBinding="{Binding Stock}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>