<Window x:Class="SkincareShop.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkincareShop"
        mc:Ignorable="d"
        Title="RegisterUserWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Họ và Tên:" />
            <TextBox Name="txtFullName"/>

            <TextBlock Text="Email:" />
            <TextBox Name="txtEmail"/>

            <TextBlock Text="Mật khẩu:" />
            <PasswordBox Name="txtPassword"/>

            <Label Content="Xác nhận mật khẩu:" Grid.Row="3" Grid.Column="0"/>
            <PasswordBox x:Name="txtConfirmPassword" Grid.Row="3" Grid.Column="1"/>

            <Button Content="Đăng Ký" Click="Register_Click"/>
            <Button Content="Thoát" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
