<Window x:Class="SkincareShop.Customer.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkincareShop"
        mc:Ignorable="d"
        Title="Welcome to SkincareShop" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFFAF3E0">
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to SkincareShop!" FontSize="24" FontWeight="Bold" Foreground="#FF5733" Margin="0,0,0,20" TextAlignment="Center"/>
            <TextBlock Text="Find the best skincare products tailored to your skin type." FontSize="16" Margin="0,0,0,30" TextAlignment="Center"/>
            
            <Button Content="Take a Skin Test" Width="200" Height="50" Background="#FF5733" Foreground="White"
                    FontSize="16" Cursor="Hand" Click="SkinTest_Click"/>

            <Button Content="Skip &amp; Go Shopping" Width="200" Height="50" Background="Gray" Foreground="White"
                    FontSize="16" Cursor="Hand" Margin="0,10,0,0" Click="Skip_Click"/>
        </StackPanel>
    </Grid>
</Window>
